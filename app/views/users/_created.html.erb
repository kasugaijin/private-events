<div class="column is-one-third">
 <h3 class="title is-3">My Events</h3>
    <% current_user.events.each do | event |%>
    <article class='panel is-info'>
      <p class="panel-heading is-info"><%= event.name %></p>
        <div class="box">
        <article class="media">
          <div class="media-content">
            <div class="content">
              <p><strong>Host:</strong> @<%= event.creator.username %><br/> 
              <p><strong>Location:</strong> <%= event.location %></p>
              <p><strong>Date:</strong> 
                <%= event.date.strftime("%B")[0,3] %>
                <%= event.date.strftime("%d") %>,
                <%= event.date.year %></p>
            </div>
              <nav class="level">
                <div class="level-left is-mobile">
                  <p><%= link_to 'View', event, class: 'button' %> &nbsp; &nbsp;</p>
                  <p><%= link_to 'Edit', edit_event_path(event), class: 'button' %>&nbsp; &nbsp;</p>
                  <%= link_to 'Cancel', event_path(event),
                      class: 'button',
                      data: 
                          {
                            turbo_method: :delete,
                            turbo_confirm: "Click OK to confirm cancelling this event."
                          } %>
                </div>
              </nav>
          </div>
        </article>
        </div>
      </article>
  <% end %>
</div>