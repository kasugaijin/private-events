<div class="column is-half">
  <%= simple_form_for(@event) do | f | %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      
      <div class="field">
        <div class="control">
          <%= f.input :name, 
                      label: 'Event Name', 
                      input_html: { class: 'input' }, 
                      wrapper: false, label_html: { class: 'label' },
                      required: true,
                      autofocus: true %>
        </div>
      </div>

      <div class="field">
        <div class="control">    
          <%= f.input :location, 
                      label: 'Event Location', 
                      input_html: { class: 'input' }, 
                      wrapper: false, label_html: { class: 'label' },
                      required: true %>
       </div>
      </div>

      <div class="field">
        <div class="control">  
          <%= f.input :date, 
                      label: 'Date & Time', 
                      input_html: { class: 'datetime' }, 
                      wrapper: false, label_html: { class: 'label' },
                      required: true %>
       </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :private, 
                      label: 'Private Event', 
                      input_html: { class: 'checkbox' }, 
                      wrapper: false, label_html: { class: 'label' } %>
       </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :description, 
                      label: 'Event Description', 
                      input_html: { class: 'textarea' },
                      wrapper: false, label_html: { class: 'label' }, 
                      placeholder: 'Tell us about your event...' %>
     </div>
      </div>

    </div>
  </div>
  <%= f.button :submit, class: 'button is-dark' %>
  <% end %>
</div>